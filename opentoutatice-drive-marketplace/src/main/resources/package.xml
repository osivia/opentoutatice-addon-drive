<package type="addon" name="open-toutatice-drive" version="@VERSION@">
	<title>openToutatice Drive</title>
	<description>
		<p>Addon to add drive synchronization and live edit by the portal.
		
		_________________________________________________________________
		
		Main Fixes:
		* Synchronizations informations given to Portal without cache.
		* Last contributor of space is not updated to current user anymore when this one synchronize the space.
		</p>
	</description>
	<home-page>http://www.toutatice.fr</home-page>
	<vendor>Academie de Rennes</vendor>
	<installer restart="true" />
	<uninstaller restart="true" />
	<!-- <hotreload-support>false</hotreload-support> -->
	<!-- <require-terms-and-conditions-acceptance>false</require-terms-and-conditions-acceptance> -->
	<nuxeo-validation>none</nuxeo-validation>
	<production-state>production_ready</production-state>
	<supported>false</supported>
	<platforms>
		<platform>cap-@CAP_DISTRIB_VERSION@</platform>
		<platform>cap-@CAP_DISTRIB_VERSION@*</platform>
	</platforms>
	<dependencies>
		<!-- Dependance sur la plate-forme opentoutatice -->
		<package>open-toutatice:@OTTC_VERSION@</package> 
		<!-- DÃ©pendance sur d'autres addons  -->
		<package>nuxeo-drive:@NUXEO_DRIVE_ADDON@:@NUXEO_DRIVE_ADDON@</package> 
	</dependencies>
	<license>LGPL 2.1</license>
	<license-url>http://www.gnu.org/licenses/lgpl-2.1.html</license-url>
</package>
